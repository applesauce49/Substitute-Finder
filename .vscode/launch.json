{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "program": "${workspaceFolder}/server/server.js",
            "runtimeArgs": [
                "--nolazy"
            ],
            "envFile": "${workspaceFolder}/server/.env",
            "cwd": "${workspaceFolder}/server",
            "console": "integratedTerminal",
            "restart": true
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:3000",
            "webRoot": "${workspaceFolder}/client/src"
        }
    ],
    "compounds": [
        {
            "name": "React Full Debug",
            "configurations": [
                "Debug Server",
                "Chrome"
            ]
        }
    ]
}